<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/css/styles.css">
  <title>ToDo List</title>
</head>

<body>

  <div class="box" id="heading">
  <h1>
    <%= listTitle %>
  </h1>
  </div>

  <div class="box">

    <form action="/delete" method="post">
      <%    newListItems.forEach(function(taskitem){ %>
        <div class="item">
        <input name="checkbox" type="checkbox" onChange="this.form.submit()" value="<%=taskitem._id%>">
        <p><%=taskitem.task%></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>
      <%    })  %>



  <form class="item" action="/" method="post">
    <input type="text" name="newTask" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
  </div>

  <footer>
     Copyright 2021 ToDoList
  </footer>

</body>
</html>
